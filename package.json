{
  "name": "vscode-repowiki",
  "displayName": "RepoWiki",
  "description": "在资源管理器侧边栏中管理和浏览工作区的 Markdown 文档",
  "version": "0.0.1",
  "publisher": "repowiki",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "repowiki-container",
          "title": "RepoWiki",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "repowiki-container": [
        {
          "id": "repowiki.markdownExplorer",
          "name": "Markdown 文档",
          "icon": "$(markdown)",
          "contextualTitle": "RepoWiki"
        }
      ]
    },
    "commands": [
      {
        "command": "repowiki.refresh",
        "title": "刷新文档列表",
        "icon": "$(refresh)"
      },
      {
        "command": "repowiki.detectAgents",
        "title": "检测 AI Agent"
      },
      {
        "command": "repowiki.switchAgent",
        "title": "切换 AI Agent"
      },
      {
        "command": "repowiki.initDocs",
        "title": "初始化文档库"
      },
      {
        "command": "repowiki.updateDocs",
        "title": "更新文档",
        "icon": "$(sync)"
      },
      {
        "command": "repowiki.regenerateDocs",
        "title": "强制重新生成所有文档"
      },
      {
        "command": "repowiki.deleteGroup",
        "title": "删除虚拟分组",
        "icon": "$(trash)"
      },
      {
        "command": "repowiki.renameGroup",
        "title": "重命名虚拟分组"
      },
      {
        "command": "repowiki.setAlias",
        "title": "设置目录别名"
      },
      {
        "command": "repowiki.openFile",
        "title": "打开文件"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "repowiki.refresh",
          "when": "view == repowiki.markdownExplorer",
          "group": "navigation@1"
        },
        {
          "command": "repowiki.updateDocs",
          "when": "view == repowiki.markdownExplorer",
          "group": "navigation@2"
        },
        {
          "command": "repowiki.initDocs",
          "when": "view == repowiki.markdownExplorer",
          "group": "overflow"
        },
        {
          "command": "repowiki.regenerateDocs",
          "when": "view == repowiki.markdownExplorer",
          "group": "overflow"
        },
        {
          "command": "repowiki.detectAgents",
          "when": "view == repowiki.markdownExplorer",
          "group": "overflow"
        },
        {
          "command": "repowiki.switchAgent",
          "when": "view == repowiki.markdownExplorer",
          "group": "overflow"
        }
      ],
      "view/item/context": [
        {
          "command": "repowiki.deleteGroup",
          "when": "view == repowiki.markdownExplorer && viewItem == virtualGroup",
          "group": "inline"
        },
        {
          "command": "repowiki.renameGroup",
          "when": "view == repowiki.markdownExplorer && viewItem == virtualGroup"
        },
        {
          "command": "repowiki.setAlias",
          "when": "view == repowiki.markdownExplorer && viewItem == physicalGroup"
        }
      ]
    },
    "configuration": {
      "title": "RepoWiki",
      "properties": {
        "repowiki.groups": {
          "type": "object",
          "default": {},
          "description": "虚拟分组配置，键为分组名，值为文件路径数组"
        },
        "repowiki.directoryAliases": {
          "type": "object",
          "default": {},
          "description": "目录别名配置，键为目录路径，值为显示别名"
        },
        "repowiki.initialized": {
          "type": "boolean",
          "default": false,
          "description": "插件是否已初始化"
        },
        "repowiki.docMappings": {
          "type": "array",
          "default": [],
          "description": "代码文件与文档的映射关系配置"
        },
        "repowiki.preferredAgent": {
          "type": "string",
          "enum": ["qoder", "claude", "codex", "cursor", "aider", "custom"],
          "description": "首选的 AI Agent 类型"
        },
        "repowiki.customAgentCommand": {
          "type": "string",
          "description": "自定义 AI Agent 命令名称"
        },
        "repowiki.customAgentTemplate": {
          "type": "string",
          "description": "自定义 AI Agent 命令模板（支持占位符：{{PROMPT}}, {{DOC_PATH}}, {{TITLE}}, {{SOURCE_FILES}}）"
        },
        "repowiki.customAgentPriority": {
          "type": "number",
          "default": 100,
          "description": "自定义 AI Agent 的优先级"
        },
        "repowiki.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**"
          ],
          "description": "排除的文件匹配模式"
        },
        "repowiki.enableLogging": {
          "type": "boolean",
          "default": false,
          "description": "启用 RepoWiki 插件的详细日志输出,用于调试和问题排查"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}
